
<!DOCTYPE html>
<html lang="en">

<head>
    <title><%- title %></title>
    <%- include partial/header.ejs %>   
    <!-- include angular js file -->
    <script src="/js/api.js"></script>
    <script src="/js/single-post.js"></script>
</head>


<body ng-app="singlePost" ng-controller="PostController">

  <div id="wrapper">

    <%- include partial/nav.ejs %>

    <div id="page-wrapper">

      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">公告 </h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>

      

      <!-- /.row -->
      <div class="row">
        <!-- /.col-lg-12 -->
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
                {{ data.singlePost.title }} {{ data.singlePost.date }}
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" ng-bind-html="parseToHtml(data.singlePost.content)">
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
          <!-- /.col-lg-12 -->
      </div>

      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <button type="button" class="btn btn-default" onclick="location.href='/'">
              <span class="glyphicon glyphicon-chevron-left"></span>  返回
            </button>
          </div>
        </div>
      </div>
      
    </div>
    <!-- /#page-wrapper -->

  </div>
  <!-- /#wrapper -->

    <%- include includes/js.ejs %>
    <script>
      post_id = "<%- post_id %>";
    </script>
</body>

</html>
