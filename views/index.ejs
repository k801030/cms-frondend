<!DOCTYPE html>
<html lang="en">

<head>
    <title><%- title %></title>
    <%- include partial/header.ejs %>   
    <!-- include angular js file -->
    <script src="/js/api.js"></script>
    <script src="/js/post.js"></script>
</head>


<body ng-app="post" ng-controller="APIController">

  <div id="wrapper">

    <%- include partial/nav.ejs %>

    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">公告</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>

      

      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
                所有公告
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>標題</th>
                      <th>內容</th>
                      <th>日期</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="odd gradeX" ng-repeat="post in data.posts" >
                      <td><a ng-href="/post/{{post._id}}">{{ post.title }}</a></td>
                      <td ng-bind-html="parseToHtml(post.content)"></td>
                      <td class="center">{{ post.date }}</td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="panel-body">
              </div>
              
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
          <!-- /.col-lg-12 -->
      </div>
        
    </div>
    <!-- /#page-wrapper -->

  </div>
  <!-- /#wrapper -->

    <%- include includes/js.ejs %>

</body>

</html>
